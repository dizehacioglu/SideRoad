doctype html
html(lang='en')
	head
		meta(charset="utf-8")
		title Side Road | Travel Far & Wide
		
		
		link(rel="stylesheet" type="text/css" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css")
		link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
		link(rel="stylesheet" href="/stylesheets/main.css")


	body


		.jumbotron
			
			.container
				h1 Side Road
				p It's about the journey, not the destination
				.perfect-center
					//- .input-container
					form#route
						.form-group
							.icon
								i.fa.fa-map-marker
							input#pac-input.form-control(type='text', name='origin', placeholder='Enter origin', value="Boulder, CO")
						.form-group2
							.icon2
								i.fa.fa-map-marker
							input#pac-input2.form-control(type='text', name='destination', placeholder='Enter destination', value="Denver, CO")

						p
							button.btn.btn-default(type="submit") Explore!
		

		div#map-canvas

		.container#locations

			#templates
				#location-tpl
					img.location-img(src="//placehold.it/25x25")
					h3.location-name Location name
					p.location-street Location Street
					p.location-city Location City state
						.clearfix
					.location-type Location Type
					.location-rating 
						i.fa.fa-star

	//- SCRIPTS
	script(type="text/javascript" src="//maps.googleapis.com/maps/api/js?key=AIzaSyAFukM1F_d1PYoMQu8djXU-Bljfi8fyhWI&libraries=places")
	script(type="text/javascript" src="//google-maps-utility-library-v3.googlecode.com/svn/trunk/routeboxer/src/RouteBoxer.js")
	script(type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js")
	script(type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js")
	script(type="text/javascript" src="/scripts/main.js")
		